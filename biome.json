{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "src/components/ui",
      "**/dist/**",
      "dist",
      "**/dist",
      "apps/messaging/dist"
    ],
    "maxSize": 3145728
  },
  "linter": {
    "ignore": [
      "node_modules",
      ".next",
      "packages/tsconfig",
      "**/dist/**",
      "dist"
    ],
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "indentStyle": "space"
  }
}
