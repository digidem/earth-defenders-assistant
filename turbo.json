{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "ui": "stream",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "env": [
        "RESEND_API_KEY",
        "LOOPS_ENDPOINT",
        "LOOPS_API_KEY",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "OPENPANEL_SECRET_KEY",
        "SENTRY_AUTH_TOKEN",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "BASE_URL"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".expo/**",
        "dist/**"
      ]
    },
    "start": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "persistent": true,
      "cache": false
    },
    "jobs": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "dependsOn": ["^topo"]
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "migrate": {
      "cache": false,
      "dependsOn": ["^topo"]
    },
    "seed": {
      "cache": false,
      "dependsOn": ["migrate"]
    },
    "build:config": {
      "dependsOn": ["^build"],
      "inputs": ["config.yaml", "packages/config/**/src/**"],
      "outputs": [
        "packages/config/typescript/dist/**",
        "packages/config/python/.venv/**",
        "packages/config/python/config.yaml",
        "packages/config/typescript/package.json",
        "packages/config/python/pyproject.toml"
      ]
    }
  }
}
